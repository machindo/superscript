@import '../../vars'

.words-toolbar
  flex-wrap wrap

.words-toolbar--results
  counter-reset entry
  width 100%
  max-height 75vh
  margin-top 1ch
  border solid 1px var(--border-color)
  overflow auto
  z-index 1
  cursor default

.words-toolbar--result
  padding 1em
  border-top solid 1px var(--border-color)

  &:first-child
    border-top none

    > h2
      margin-top 0

  > h2
    margin-top 0

    &::before
      counter-increment entry
      content counter(entry) '. '
      font-weight normal
      font-size 1rem

    > small
      font-weight normal
      font-size 1rem

  > h3
    margin-bottom 0

.words-toolbar--detail-value
  cursor text
  user-select text

.maxed-out-notice
  flex 1
  font-size .8rem

@import '../../vars'
@import '../../forms'

.ui-container
  display grid
  height 100vh
  grid-template-areas \
    'preview   form' \
    'preview   actions'
  grid-template-columns 1fr 300px
  grid-template-rows 1fr auto

  @media print
    display block

.font-size-preview
  flex 0 0 5ch

[hidden]
  display unset
  position absolute
  top -9999px
  height 0
  width 0
  overflow hidden
  visibility hidden

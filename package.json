{
  "name": "superscript",
  "version": "1.6.2",
  "engines": {
    "node": "^22.14.0"
  },
  "author": {
    "name": "Justin Paul Silva",
    "email": "justin@superscript.com",
    "url": "http://jpsilva.com"
  },
  "homepage": "https://www.superscript.app",
  "repository": "github:machindo/superscript",
  "private": true,
  "description": "Comic script editor inspired by Markdown and Fountain",
  "main": "packed/main.js",
  "scripts": {
    "clean": "del-cli ./packed",
    "start": "run-p start:*",
    "start:webpack": "cross-env NODE_ENV=development webpack --watch",
    "start:electron": "nodemon -w packed/main.js -x \"electron ./packed/main.js\"",
    "prebuild": "npm run clean && webpack",
    "build": "run-script-os",
    "build:darwin": "electron-builder -m --universal",
    "build:linux": "electron-builder -l",
    "build:win32": "electron-builder -w --ia32 --x64",
    "install-app-deps": "electron-builder install-app-deps",
    "deploy": "run-script-os",
    "deploy:darwin": "./deploy-mac.sh",
    "deploy:linux": "./deploy-linux.sh",
    "deploy:win32": "sh ./deploy-windows.sh",
    "deploy-changelog": "gsutil cp changelog.json gs://superscript-releases",
    "fixDetritusError": "xattr -cr .",
    "postinstall": "npm run install-app-deps",
    "test": "nyc ava",
    "test:watch": "npm test -- --watch"
  },
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "chokidar": "^3.0.1",
    "electron-updater": "6.6.2",
